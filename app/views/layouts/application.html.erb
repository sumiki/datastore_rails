<!DOCTYPE html>
<html>
  <head>
    <title>DatastoreRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application' %>

  </head>

  <body>
    <nav id="header" class="flex items-center justify-between flex-wrap bg-gray-500 p-6">
      <div class="flex items-center flex-shrink-0 text-white mr-6">
        <a href="/" class="font-semibold text-xl tracking-tight">Note</a>
      </div>
      <div class="block">
        <button
          class="flex items-center px-3 py-2 border rounded text-gray-200 border-gray-400 hover:text-white hover:border-white"
          @click="toggleHeader"
        >
          <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
        </button>
      </div>
      <div v-if="open" class="w-full block flex-grow flex items-center w-auto">
        <div class="text-sm flex-grow">
          <a href="/member" class="block mt-4 inline-block mt-0 text-gray-200 hover:text-white mr-4">
            Dashboard
          </a>
        </div>
        <% if @current_user %>
          <div>
            <a href="/logout" class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-0">Logout</a>
          </div>
        <% else %>
          <div>
            <a href="/login" class="inline-block text-sm px-4 py-2 leading-none border rounded text-white border-white hover:border-transparent hover:text-teal-500 hover:bg-white mt-4 lg:mt-0">Login</a>
          </div>
        <% end %>
      </div>

    </nav>

    <%= yield %>
  </body>
  <%= javascript_pack_tag 'application' %>
  <%= yield :javascript %>
</html>
