<div class="block w-full bg-white rounded shadow-lg p-8 m-4 max-w-sm mx-auto">
  <h1 class="block w-full text-center font-bold text-lg mb-6">Login</h1>
  <div>
    <%= form_tag login_index_path, { method: :post, class: "mb-4 md:justify-between" } do %>
      <div class="mb-4">
        <label class="w-full block mb-2 uppercase font-bold text-lg text-grey-darkest">Email:</label>
        <%= text_field_tag :email, nil, { class: "w-full border py-2 px-3 text-grey-400", autocomplete: 'off' } %>
      </div>
      <div class="mb-4">
        <label class="w-full block mb-2 uppercase font-bold text-lg text-grey-darkest">Password:</label>
        <%= password_field_tag :password, nil, { class: "w-full border py-2 px-3 text-grey-400", autocomplete: 'off' } %>
      </div>
      <div><%= submit_tag 'Login', { class: "cursor-pointer block bg-gray-500 hover:bg-gray-400 text-white uppercase text-lg mx-auto p-3 mt-10 rounded" } %></div>
    <% end %>
  </div>
</div>
